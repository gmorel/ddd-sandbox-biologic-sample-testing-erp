<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
    >
    <entity name="Api\ConsumableEngine\Domain\Entity\Supplier" table="supplier">
        <id name="id" type="bigint" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" length="80"  unique="true" />

        <one-to-many field="consumables" target-entity="Api\ConsumableEngine\Domain\Entity\Consumable" mapped-by="supplier">
            <cascade>
                <cascade-persist />
            </cascade>
        </one-to-many>

    </entity>
</doctrine-mapping>
