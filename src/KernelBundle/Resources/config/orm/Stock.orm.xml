<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
    >
    <embeddable name="Api\ConsumableEngine\Domain\Entity\Stock">
        <field name="quantityValue" column="quantity_value" type="float" />
        <field name="quantityUnit" column="quantity_unit" type="string" length="80" />
        <field name="lastTimeReplenished" column="last_time_replenished" type="datetime" nullable="true"/>
        <field name="deliveryThresholdValue" column="delivery_threshold_value" type="decimal" scale="2" precision="18" nullable="true" />
        <field name="deliveryThresholdUnit" column="delivery_threshold_unit" type="string" length="10" nullable="true" />
    </embeddable>
</doctrine-mapping>
