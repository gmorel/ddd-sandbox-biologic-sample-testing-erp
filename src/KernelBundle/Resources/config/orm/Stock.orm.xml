<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
    >
    <entity name="Api\ConsumableEngine\Domain\Entity\Stock" table="stock">
        <id name="id" type="bigint" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="quantityValue" column="quantity_value" type="float" />
        <field name="quantityUnit" column="quantity_unit" type="string" length="80" />

        <many-to-one field="consumable" target-entity="Api\ConsumableEngine\Domain\Entity\Consumable" inversed-by="stock">
        </many-to-one>

    </entity>
</doctrine-mapping>
